<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <script>    
      var sortByTitle = function(sortedWikis) {
          let swapped;
          do {
            swapped = false;
            for (let i=0; i < sortedWikis.length; i++) {
              if (sortedWikis[i] && sortedWikis[i + 1] && sortedWikis[i].title < sortedWikis[i + 1].title) {
                [sortedWikis[i], sortedWikis[i + 1]] = [sortedWikis[i + 1], sortedWikis[i]];
                swapped = true;
              }
            }
          } while (swapped);
          
          return sortedWikis;
      }
  
  </script>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Wikis</h1>
      <% if(currentUser) { %>
        <a href="/wikis/new" class="btn btn-success">New Wiki</a>
      <% } %>
      <input type="button" name="sort" value="Sort by title" onclick="sortByTitle(`<%= wikis %>`)">
      <ul class="list-group">

        <h4>Public</h4>
        <% wikis.forEach((wiki) => { %>
          <% if (wiki.private === false) { %>
            <li class="list-group-item">
              <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
            </li>
          <% } %>
        <% }) %>

        <% if (currentUser && (currentUser.isAdmin() || currentUser.isPremium())) { %>
          <h4>Private</h4>
          <% wikis.forEach((wiki) => { %>
            <% if (wiki.private === true) { %>
              <li class="list-group-item">
                <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
              </li>
            <% } %>
          <% }) %>
        <% } %>

        <% if (currentUser) { %>
          <h4>Collaborating on:</h4>
          <% wikis.forEach((wiki) => { %>
            <% wiki.collaborators.forEach((collaborator) => { %>
              <% if(collaborator.userId === currentUser.id) { %>
                <li class="list-group-item">
                  <a href="/wikis/<%= wiki.id %>"> <%= wiki.title %> </a>
                </li>
              <% } %>
            <% }) %>
          <% }) %>
        <% } %>
      </ul>

    </main>
  </body>
</html>